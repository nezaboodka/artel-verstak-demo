подключить Артель
подключить Библиотека.Реактроник
подключить Библиотека.Верстак

выполнить
{
  пусть часики = транзакция<Часы>({ возврат Часы(100) }, [])

  Страница(
  {
    пусть с = блок.базис.стили
    с.цвет = "#f0f0f0"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(Режим.ТочечноеПерестроение,
    {
      блок.рост-ширины = 1
      блок.рост-высоты = 1
      блок.выравнивание-блока = Выравнивание.ПоГраницам
      блок.выравнивание-содержимого = Выравнивание.ПоЦентру

      пусть а = 123
      пусть абб = 456

      Надпись("Поехали!")

      начать-новую-строку()
      Надпись("{часики.час}:{часики.минута}:{часики.секунда}")
    })
  })
}
