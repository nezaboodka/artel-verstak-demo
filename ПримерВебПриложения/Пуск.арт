подключить Верстак

выполнить
{
  пусть время = транзакция<Реактроник.Часы>({ возврат Реактроник.Часы(100) }, [])

  Страница(
  {
    пусть с = блок.native.style
    с.цвет = "#f0f0f0"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(ТочечноеОбновление,
    {
      блок.рост-ширины = 1
      блок.рост-высоты = 1
      блок.выравнивание-блока = ПоГраницам
      блок.выравнивание-содержимого = ПоЦентру

      Надпись("Поехали!")

      начать-новую-строку()
      Надпись("{время.час}:{время.минута}:{время.секунда}")
    })
  })
}
