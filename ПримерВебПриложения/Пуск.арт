{
  пусть время = транзакция<Часы>({ Часы(100) })

  Страница(
  {
    пусть с = х.native.style
    с.цвет = "#f0f0f0"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(точечное-обновление,
    {
      х.рост-ширины = 1
      х.рост-высоты = 1
      х.выравнивание-блока = по-границам
      х.выравнивание-содержимого = по-центру

      Надпись("Поехали!")

      начать-новую-строку()
      Надпись("{время.час}:{время.минута}:{время.секунда}")
    })
  })
