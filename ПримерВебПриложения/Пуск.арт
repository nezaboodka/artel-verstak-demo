
подключить Библиотека.Реактроник
подключить Библиотека.Верстак

выполнить
{
  пусть часики = транзакция<Часы>({ возврат Часы(100) }, [])

  Страница(
  {
    пусть с = парам.блок.базис.стили
    с.цвет = "#f0f0f0"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(Режим.ТочечноеОбновление,
    {
      пусть б = парам.блок
      б.рост-ширины = 1
      б.рост-высоты = 1
      б.выравнивание-блока = Выравнивание.ПоГраницам
      б.выравнивание-содержимого = Выравнивание.ПоЦентру

      Надпись("Поехали!")

      начать-новую-строку()
      Надпись("{часики.час}:{часики.минута}:{часики.секунда}")
    })
  })
}
