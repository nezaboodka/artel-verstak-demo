
подключить Реактроник
подключить Верстак

выполнить
{
  пусть время = транзакция<Часы>({ Часы(100) })

  Страница(
  {
    пусть с = эл.стиль
    с.цвет = "#f0f0f0"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"
    эл.выравнивание = растяжка-области

    новая-строка()
    Секция(
      режим = независимое-обновление,
      при-создании =
      {
        эл.выравнивание = растяжка-области
        эл.выравнивание-внутри = центр-области
      },
      при-изменении =
      {
        Надпись("Поехали!")

        новая-строка()
        Надпись("{время.час}:{время.минута}:{время.секунда}")
      })
  })
}
