выполнить
{
  пусть время = транзакция<Часы>({ Часы(100) })

  Страница(
  {
    пусть с = эл.стиль
    с.цвет = "#f0f0f0"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(независимое-обновление,
    {
      эл.ширина-лишь-прирост = 1
      эл.высота-лишь-прирост = 1
      эл.выравнивание-элемента = габариты
      эл.выравнивание-содержимого = центр

      Надпись("Поехали!")

      начать-новую-строку()
      Надпись("{время.час}:{время.минута}:{время.секунда}")
    })
  })
}
