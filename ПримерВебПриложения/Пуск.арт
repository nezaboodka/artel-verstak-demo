подключить Верстак

выполнить
{
  пусть время = транзакция<Часы>({ Часы(100) })

  Страница(
  {
    пусть с = el.native.стиль
    с.цвет = "#f0f0f0"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(независимое-обновление,
    {
      el.рост-ширины = 1
      el.рост-высоты = 1
      el.выравнивание-элемента = по-границам
      el.выравнивание-содержимого = по-центру

      Надпись("Поехали!")

      начать-новую-строку()
      Надпись("{время.час}:{время.минута}:{время.секунда}")
    })
  })
}
