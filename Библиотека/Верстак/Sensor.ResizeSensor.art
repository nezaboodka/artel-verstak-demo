import artel
import artel.js

external
{
  #ВнешняяРеализация(модуль = "verstak")
  type ResizedElement = aspect
  {
    protected
    {
      borderBoxSize: ReadonlyArray<ResizeObserverSize>

      contentBoxSize: ReadonlyArray<ResizeObserverSize>

      contentRect: DOMRectReadOnly

      resizeData: Объект
    }
  }

  #ВнешняяРеализация(модуль = "verstak")
  type ResizeSensor = object Sensor
  {
    resizedElements: Array<ResizedElement>

    on create()

    operation reset()

    operation observeResizing(block: Block<Объект, Объект, Объект>, value: Boolean, boxSizing: ResizeObserverBoxOptions /*(!)= "content-box"*/)

    hidden by type
    {
      operation onResize(entries: List<ResizeObserverEntry>)

      operation resize(entries: List<ResizeObserverEntry>)

      operation doReset()
    }
  }
}
