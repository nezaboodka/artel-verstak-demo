подключить DOM = Browser
подключить Реактроник

операция Страница(
  перестроить: Обработчик<DOM.HTMLElement>? = пусто): RxNode<El<DOM.HTMLElement>>
{
  результат = HtmlBody(`(update = перестроить))
}

операция Надпись(текст: Текст): RxNode<El<DOM.HTMLElement, None>>
{
  результат = Note(текст)
}

операция Секция(
  режим: Режим? = пусто,
  перестроить: Обработчик<DOM.HTMLElement>? = пусто)
  : RxNode<El<DOM.HTMLElement, None>>
{
  результат = Section<None, None>(`(mode = режим, update = перестроить))
}

псевдонимы(русский)
{
  тип Обработчик<Т>(элем, базис) = Delegate<T>(element, basis)

  тип Режим = Mode
  {
    стандартный = default
    независимое-обновление = independent-update
    ручное-встраивание = manual-mount
  }

  тип Выравнивание = Align
  {
    стандартно = default
    по-границам = to-bounds
    по-левому-краю = to-left
    по-центру-ширины = to-center-x
    по-правому-краю = to-right
    по-верхнему-краю = to-top
    по-центру-высоты = to-center-y
    по-нижнему-краю = to-bottom
    по-центру = to-center
  }

  // тип Блок = Block
  // {
  //   узел = node

  //   html = native

  //   это-есть-секция = isSection

  //   это-есть-таблица = isTable

  //   начальное-перестроение = isInitialUpdate

  //   модель = model

  //   контроллер = controller

  //   вид = kind

  //   область = area

  //   рост-ширины = widthGrowth

  //   минимальная-ширина = minWidth

  //   максимальная-ширина = maxWidth

  //   рост-высоты = heightGrowth

  //   минимальная-высота = minHeight

  //   максимальная-высота = maxHeight

  //   выравнивание-содержимого = contentAlignment

  //   выравнивание-блока = blockAlignment

  //   перенос-содержимого = contentWrapping

  //   всплывающий-элемент = overlayVisible

  //   приоритет-перестроения = updatePriority

  //   перетасовка-элементов = childrenShuffling

  //   строгий-порядок = strictOrder
  // }

  операция начать-новую-строку(сместить-курсор-вниз) = startNewRow(shiftCursorDown)
}
