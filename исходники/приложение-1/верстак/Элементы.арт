подключить артель

операция ВебПриложение(
  режим: Mode? = пусто,
  перестроить: Обработчик<ВебЭлемент>? = пусто)
  : Block<HTMLElement>
{
  результат = HtmlBody([mode = режим, rebuild = перестроить])
}

операция Надпись(текст: Текст): Block<HTMLElement>
{
  результат = Note(текст)
}

псевдонимы(ру)
{
  тип Обработчик(блок, базис) = Delegate(block, basis)

  тип Режим = Mode
  {
    Стандартный = Default
    ТочечноеПерестроение = PinpointRebuild
    РучноеВстраивание = ManualMount
  }

  тип Стили = StyleSheet
  {
    цвет = color
    цвет-фона = backgroundColor
  }

  тип ВебЭлемент = HTMLElement
  {
    стили = style
  }
}
