    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(Режим.точечное-перестроение,
    {
      блок.рост-ширины = 1
      блок.рост-высоты = 1
      блок.выравнивание-блока = Выравнивание.растяжение
