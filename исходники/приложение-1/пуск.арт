{
  ВебПриложение(
  {
    пусть с = блок.элемент.стили

    с.цвет = "#f0f000"
    с.цвет-фона = "#1a3043"
    с.размер-шрифта = "300%"

    Секция(режим = Режим.ТочечноеПерестроение,
    {
      блок.рост-ширины = 1
      блок.рост-высоты = 1
      блок.выравнивание-блока = Выравнивание.растяжение
      блок.выравнивание-содержимого = Выравнивание.по-центру

      Надпись("Поехали!")
    })
  })
}
