подключить артель
подключить верстак

выполнить
{
  ВебПриложение(
    перестроить =
    {
      пусть с = блок.элемент.стили

      с.цвет = "#f0f000"
      с.цвет-фона = "#1a3043"
      с.размер-шрифта = "300%"

      Секция(
        режим = Режим.ТочечноеПерестроение,
        перестроить =
        {
          блок.рост-ширины = 1
          блок.рост-высоты = 1
          блок.выравнивание-блока = Align.Stretch
          блок.выравнивание-содержимого = Align.Center
          Надпись("Поехали!")
        })
    })
}
