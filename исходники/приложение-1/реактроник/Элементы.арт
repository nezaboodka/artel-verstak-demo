подключить артель

операция транзакц<Т>(действие: операция(): Т): Т
{
  результат = Transaction.run<Т>(пусто, действие)
}

псевдонимы(ру)
{
  тип Часы = Clock
  {
    час = hour

    минута = minute

    секунда = second

    мс = ms

    интервал = interval

    на-паузе = paused

    при создании(интервал) = on create(interval)

    операция пауза(значение) = pause(value)
  }

  тип Транзакция = Transaction
  {
    операция сделать(опции, опер) = run(options, func)
  }
}
